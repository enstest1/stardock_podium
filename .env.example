# API Keys for Stardock Podium
# Rename this file to .env and fill in your actual API keys

# OpenAI API Key for AI generation
OPENAI_API_KEY=
# mem0 API Key for vector database
MEM0_API_KEY=

# OpenRouter API Key for AI generation
# Can fall back to OpenAI or Anthropic
OPENROUTER_API_KEY=

# ElevenLabs API Key for voice synthesis
ELEVENLABS_API_KEY=

# ElevenLabs Voice Settings
# Range: 0.0 to 1.0, higher value = more stable voice but less expressiveness
ELEVENLABS_VOICE_STABILITY=0.5

# Range: 0.0 to 1.0, higher value = more exaggerated speaking style
ELEVENLABS_STYLE_EXAGGERATION=0.5
